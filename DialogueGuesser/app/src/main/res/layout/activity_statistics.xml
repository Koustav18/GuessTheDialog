<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_options" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"


        >
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/settings_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textStyle="bold"
            android:id="@+id/stats"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"

            android:layout_below="@+id/stats"
            android:id="@+id/view"
            android:background="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Attempted Dialog :"
            android:layout_below="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/attempted_dialog_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/attempted_dialog"
            android:layout_below="@+id/view"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/attempted_dialog_tv"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Dialogs :"
            android:layout_below="@+id/attempted_dialog_tv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/total_dialog_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32"
            android:textStyle="bold"
            android:id="@+id/total_dialog"
            android:layout_below="@+id/attempted_dialog_tv"
            android:layout_toRightOf="@+id/total_dialog_tv"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Hints Taken :"
            android:layout_below="@+id/total_dialog_tv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/total_hints_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/total_hints"
            android:textStyle="bold"
            android:layout_below="@+id/total_dialog_tv"
            android:layout_toRightOf="@+id/total_hints_tv"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level Reached :"
            android:layout_below="@+id/total_hints_tv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/level_reached_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textStyle="bold"
            android:id="@+id/level_reached"
            android:layout_below="@+id/total_hints_tv"
            android:layout_toRightOf="@+id/level_reached_tv"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Level Available :"
            android:layout_below="@+id/level_reached_tv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/highest_level_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textStyle="bold"
            android:id="@+id/highest_level"
            android:layout_below="@+id/level_reached_tv"
            android:layout_toRightOf="@+id/highest_level_tv"
            android:layout_marginTop="5dp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/highest_level"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>